{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "outDir": "./build",
    "rootDir": ".",
    "paths": {
      "~middlewares/*": ["./src/api/middlewares/*"],
      "~modules/*": ["./src/api/modules/*"],
      "~common/*": ["src/api/common/*"],
      "~config/*": ["./src/config/*"],
      "~database/*": ["./src/database/*"],
      "~utils/*": ["./src/utils/*"]
    }
  },
  "exclude": ["node_modules", "build", "coverage"]
}
